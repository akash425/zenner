# ============================================
# Zenner - Environment Variables Configuration
# ============================================
# Copy this file to .env and update with your values
# cp .env.example .env

# ============================================
# MongoDB Configuration (REQUIRED)
# ============================================
# MongoDB connection string
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
# For local MongoDB: mongodb://localhost:27017/
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# ============================================
# API Service Configuration
# ============================================
# API service port
API_PORT=5000

# Flask debug mode (true/false, set to false for production)
FLASK_DEBUG=false

# Flask environment (development/production)
FLASK_ENV=production

# CORS allowed origins (comma-separated, * for all, or specific origins)
# For production, specify exact origins: http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=*

# API request timeout in seconds
API_TIMEOUT=10

# ============================================
# UI Service Configuration (REQUIRED)
# ============================================
# API base URL for the React app (used during Docker build)
# For Docker: use the service name or internal network URL
# For local dev: http://localhost:5000/api
# For production: https://api.yourdomain.com/api
REACT_APP_API_BASE_URL=http://localhost:5000/api

# UI service port
UI_PORT=3000

# ============================================
# Security Configuration (REQUIRED)
# ============================================
# Secret key for Flask sessions (generate a random string for production)
# IMPORTANT: Change this to a secure random string in production
FLASK_SECRET_KEY=change-this-to-a-random-string-in-production

# Enable API authentication (true/false)
API_AUTH_ENABLED=false

# API key for authentication (if API_AUTH_ENABLED=true)
# API_KEY=your-api-key-here

# ============================================
# Environment
# ============================================
# Application environment (development/staging/production)
ENVIRONMENT=production

# ============================================
# Logging Configuration
# ============================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable detailed logging (true/false)
VERBOSE_LOGGING=false
